{
  "name": "discord-cleaner",
  "private": true,
  "description": "Desktop приложение для безопасной очистки сообщений Discord с множественными профилями и продвинутой фильтрацией",
  "author": {
    "name": "resoufish",
    "email": "resoufish@gmail.com",
    "url": "https://github.com/resoufish"
  },
  "main": "./electron/main.ts",
  "version": "0.0.0",
  "type": "module",
  "license": "MIT",
  "keywords": [
    "discord",
    "cleaner",
    "electron",
    "typescript",
    "react",
    "tailwind"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/resoufish/discord-cleaner"
  },
  "scripts": {
    "vite:dev": "vite",
    "vite:build": "vite build",
    "electron:dev": "electron .",
    "electron:build:mac": "pnpm electron-builder --mac",
    "electron:build:linux": "pnpm electron-builder --linux",
    "electron:build:windows": "pnpm electron-builder --win",
    "build:all": "pnpm vite:build && pnpm electron:build:mac && pnpm electron:build:linux && pnpm electron:build:windows"
  },
  "dependencies": {
    "@tailwindcss/vite": "^4.1.12",
    "icon-gen": "^5.0.0",
    "png-to-ico": "^2.1.8",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "sharp": "^0.34.3",
    "tailwindcss": "^4.1.12"
  },
  "devDependencies": {
    "@eslint/js": "^9.33.0",
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-label": "^2.1.7",
    "@radix-ui/react-progress": "^1.1.7",
    "@radix-ui/react-scroll-area": "^1.2.10",
    "@radix-ui/react-slot": "^1.2.3",
    "@radix-ui/react-switch": "^1.2.6",
    "@radix-ui/react-tabs": "^1.1.13",
    "@vitejs/plugin-react-swc": "^4.0.0",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "electron": "^37.3.0",
    "electron-builder": "^26.0.12",
    "eslint": "^9.33.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "globals": "^16.3.0",
    "lucide-react": "^0.539.0",
    "motion": "^12.23.12",
    "next-themes": "^0.4.6",
    "sonner": "^2.0.7",
    "tailwind-merge": "^3.3.1",
    "typescript": "~5.8.3",
    "typescript-eslint": "^8.39.1",
    "vite": "^7.1.2"
  },
  "build": {
    "appId": "com.resoufish.discordcleaner",
    "productName": "Discord Cleaner",
    "directories": {
      "output": "dist",
      "buildResources": "build"
    },
    "files": [
      "dist/vite/**",
      "electron/**"
    ],
    "extraResources": [
      {
        "from": "build/icons",
        "to": "icons",
        "filter": [
          "**/*"
        ]
      }
    ],
    "win": {
      "target": [
        "nsis",
        "zip"
      ],
      "icon": "build/icons/icon.ico"
    },
    "mac": {
      "target": [
        "dmg",
        "zip"
      ],
      "category": "public.app-category.utilities",
      "icon": "build/icons/icon.icns",
      "publish": null
    },
    "linux": {
      "target": [
        "AppImage",
        "deb",
        "rpm"
      ],
      "category": "Utility",
      "icon": "build/icons/icon.png",
      "maintainer": "resoufish <resoufish@gmail.com>",
      "publish": null
    }
  }
}